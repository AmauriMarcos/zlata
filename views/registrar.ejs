            <div id="box">
                <div id="main"></div>

                 <form action="/login" id="loginForm" method="POST">
                     <h1>Login</h1>
                     <input name="login[email]" type="email" placeholder="Email"/><br>
                     <input name="login[password]" type="password" placeholder="Senha"/><br>
                     <button type="submit">Entrar</button>
                 </form>

                 <form action="/cadastrar" id="signupForm" method="POST">
                    <h1>Cadastra-se</h1>
                    <input name="cadastro[nickname]" type="text" placeholder="Nome de usuário"/><br>
                    <input name="cadastro[email]" type="email" placeholder="Email"/><br>
                    <input name="cadastro[password]" type="password" placeholder="Senha"/><br>
                    <button type="submit">Cadastrar</button>
                </form>
                
                <div id="login_msg">Já tem uma conta?</div>
                <div id="signup_msg">Ainda não tem conta?</div>

                <button id="login_btn">Login</button>
                <button id="signup_btn">Sign Up</button>
            </div>


        <script src="cadastro.js"></script>
    </body>
</html>